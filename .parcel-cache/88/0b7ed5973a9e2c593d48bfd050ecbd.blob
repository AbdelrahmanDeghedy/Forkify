const showRecipe = async function () {
  try {
    const res = await fetch('https://forkify-api.herokuapp.com/api/v2/recipes/4c6e94a3-c5ce-4141-8803-56983ec0b3e6')
    const data = await res.json();

    if (!res.ok) throw new Error(`${data.message} (${res.status})`);

    console.log(res, data);
  } catch (err) {
    alert(err);
  }
}

showRecipe();